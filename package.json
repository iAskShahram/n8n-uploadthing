{
	"name": "n8n-nodes-uploadthing",
	"version": "0.1.0",
	"description": "n8n node to upload files to UploadThing",
	"keywords": [
		"n8n-community-node-package",
		"n8n-node",
		"n8n-uploadthing",
		"uploadthing",
		"file-upload"
	],
	"license": "MIT",
	"homepage": "",
	"author": {
		"name": "Ahmed Shahram",
		"email": "ping@shahram.dev"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/iAskShahram/n8n-uploadthing.git"
	},
	"engines": {
		"node": ">=20.15"
	},
	"main": "index.js",
	"scripts": {
		"build": "npx rimraf dist && tsc && gulp build:icons",
		"dev": "tsc --watch",
		"format": "prettier nodes credentials --write",
		"lint": "eslint nodes credentials package.json",
		"lintfix": "eslint nodes credentials package.json --fix",
		"prepublishOnly": "pnpm run build && pnpm run lint"
	},
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/UploadThingApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/UploadThing/UploadThing.node.js"
		]
	},
	"devDependencies": {
		"@typescript-eslint/parser": "~8.32.0",
		"eslint": "^8.57.0",
		"eslint-plugin-n8n-nodes-base": "^1.16.3",
		"gulp": "^5.0.0",
		"prettier": "^3.5.3",
		"typescript": "^5.8.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	},
	"dependencies": {
		"uploadthing": "^7.7.4"
	}
}
